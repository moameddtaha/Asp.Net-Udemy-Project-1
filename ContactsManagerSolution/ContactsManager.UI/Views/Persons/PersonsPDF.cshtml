@model IEnumerable<PersonResponse>

@{
    Layout = null;
}

@*http://localhost:port/StyleSheet.css*@

<link href="@("http://" + Context.Request.Host.ToString() + "/StyleSheet.css")" rel="stylesheet" />

<h1>Persons</h1>

<table class="table w-100 mt">
    <thead>
        <tr>
            <th>Person Name</th>
            <th>Email</th>
            <th>Date of Birth</th>
            <th>Age</th>
            <th>Gender</th>
            <th>Country Name</th>
            <th>Address</th>
            <th>Receive News Letters</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var person in Model)
        {
            <tr>
                <td style="width:15%">@person.PersonName</td>
                <td style="width:20%">@person.Email</td>
                <td style="width:13%">@person.DateOfBirth?.ToString("dd MM yyyy")</td>
                <td style="width:9%">@person.Age</td>
                <td style="width:9%">@person.Gender</td>
                <td style="width:10%">@person.CountryName</td>
                <td style="width:10%">@person.Address</td>
                <td style="width:20%">@person.ReceiveNewsLetter</td>
            </tr>
        }
    </tbody>
</table>
